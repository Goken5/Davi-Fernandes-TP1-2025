<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Enquete - Matérias</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: Arial, sans-serif;
            background-color: white;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 20px;
        }
        
        .container {
            width: 100%;
            max-width: 600px;
            background: white;
            border-radius: 15px;
            box-shadow: 0 5px 15px black;
            padding: 30px;
        }
        
        h1 {
            text-align: center;
            color: black;
            margin-bottom: 10px;
            font-size: 2em;
        }
        
        h2 {
            text-align: center;
            color: black;
            margin-bottom: 30px;
            font-size: 1.3em;
            font-weight: normal;
        }
        
        fieldset {
            border: none;
            padding: 0;
            margin: 0;
        }
        
        .botoes-container {
            display: flex;
            flex-direction: column;
            gap: 15px;
            margin-bottom: 30px;
        }
        
        .materia-btn {
            width: 100%;
            padding: 18px;
            border-radius: 10px;
            border: 2px solid blue;
            background-color: white;
            color: blue;
            font-size: 16px;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        
        .materia-btn:hover {
            background-color: blue;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 3px 10px rgb(54, 54, 54);
        }
        
        .materia-btn.selecionado {
            background-color: blue;
            color: white;
            border-color: blue;
        }
        
        .submit-btn {
            width: 100%;
            padding: 18px;
            border-radius: 10px;
            border: none;
            background-color: green;
            color: white;
            font-size: 18px;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-bottom: 20px;
        }
        
        .submit-btn:hover:not(:disabled) {
            background-color: green;
            transform: translateY(-2px);
            box-shadow: 0 3px 10px rgba(40,167,69,0.3);
        }
        
        .submit-btn:disabled {
            background-color: #6c757d;
            cursor: not-allowed;
            transform: none;
            box-shadow: none;
        }
        
        .results-btn {
            width: 100%;
            padding: 15px;
            border-radius: 10px;
            border: 2px solid gray;
            background-color: white;
            color: gray;
            font-size: 16px;
            text-decoration: none;
            text-align: center;
            display: block;
            transition: all 0.3s ease;
        }
        
        .results-btn:hover {
            background-color: gray;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 3px 10px rgb(77, 76, 76);
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Votação - Matérias Favoritas</h1>
        <h2>Escolha sua matéria favorita</h2>
        
        <form action="/votar" method="post">
            <fieldset>
                <div class="botoes-container">
                    <button type="button" class="materia-btn" onclick="selecionarMateria('microcontroladores', this)">
                        Microcontroladores
                    </button>
                    <button type="button" class="materia-btn" onclick="selecionarMateria('tecnicas_programacao', this)">
                        Técnicas de Programação 1
                    </button>
                    <button type="button" class="materia-btn" onclick="selecionarMateria('programacao_web', this)">
                        Programação Web
                    </button>
                </div>
                
                <input type="hidden" name="voto" id="votoInput">
                
                <button type="submit" class="submit-btn" id="submitBtn" disabled>
                    Enviar Voto
                </button>
            </fieldset>
        </form>
        
        <a href="/resultado" class="results-btn">
            Ver Resultados da Enquete
        </a>
    </div>

    <script>
        function selecionarMateria(materia, botao) {
            const botoes = document.querySelectorAll('.materia-btn');
            botoes.forEach(b => {
                b.classList.remove('selecionado');
                b.style.backgroundColor = 'white';
                b.style.color = '#007bff';
            });

            botao.classList.add('selecionado');
            botao.style.backgroundColor = '#0056b3';
            botao.style.color = 'white';

            document.getElementById('votoInput').value = materia;
            document.getElementById('submitBtn').disabled = false;
        }
    </script>
</body>
</html>